@{
    ViewData["Title"] = "Categories";
    string bgImage = "/pexels-lumn.jpg";
    var catiegories = (List<CategoryModel>) ViewData["Categories"];
}

<div class="" style="background: url(@bgImage) no-repeat center center; background-size: cover; height: 800px">
    <div class="text-center" style="height: 800px; background-color: rgba(0,0,0,0.5); ">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Ezz Restaurant</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div style=" height:100%; display:flex; flex-direction:column;justify-content: center">
            <h1 class="display-4" style="color: white; font-size: 120px; font-weight: bold; font-family: Pattaya,serif;">Categories</h1>
            
        </div>
    </div>
</div>

<div class="Homebody container ">
    <div class="row">
    @foreach (var categorie in catiegories)
    {
        <div class="col-4 ">
            <a href="/Categories/Products/@categorie.Id">
            <div class="category-card box-shadow" style="background-image: url(@categorie.img)">
                <div class="category-body">
                    <h4 style="color: white; font-weight: bold">@categorie.Name</h4>
                </div>
            </div>
            </a>
        </div>
    }
    </div>
</div>

